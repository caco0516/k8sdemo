html
  head
    title K8's Demo
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css")
  body
    h1(style="background-color:red; color: white; text-align: center; margin: 0px;") Aplicacion WEB K8s Demo -  #{ hostname }

    div.pure-g
      div.pure-u-1-3
      div.pure-u-1-3
        img(src="https://www.docker.com/wp-content/uploads/2022/05/Docker_Temporary_Image_Google_Blue_1080x1080_v1.png" width="256")
      div.pure-u-1-3

    div.pure-g
      div.pure-u-1-5
      div.pure-u-3-5
        table.pure-table.pure-table-bordered
          thead
            tr
              th(style="width: 80%;") Nombre
              th Precio $
          tbody
            each p in products
              tr
                th(style="text-align:left;") #{p.name}
                th #{p.price}
      div.pure-u-1-5